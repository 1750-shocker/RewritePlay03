<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="24px">

        <tech.jidouauto.component.widgets.basic.ImageFilterView
            android:id="@+id/iv_icon"
            android:layout_height="48px"
            android:layout_width="48px"
            android:layout_marginStart="24px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <tech.jidouauto.component.widgets.basic.TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24px"
            android:layout_marginEnd="24px"
            android:singleLine="true"
            android:textSize="36px"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            app:layout_constraintEnd_toStartOf="@id/tv_arrow_hint"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <tech.jidouauto.component.widgets.basic.TextView
            android:id="@+id/tv_arrow_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24px"
            android:singleLine="true"
            android:textSize="28px"
            android:textColor="@color/white"
            android:text="更多"
            app:layout_constraintEnd_toStartOf="@id/iv_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <tech.jidouauto.component.widgets.basic.ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_marginEnd="24px"
            android:scaleType="centerInside"
            android:tint="@color/white"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>