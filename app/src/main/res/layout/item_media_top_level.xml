<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.gta.model.room.entity.Article" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="24px"
        android:layout_marginHorizontal="24px"
        android:layout_height="wrap_content">

        <tech.jidouauto.component.widgets.basic.ImageFilterView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="317px"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            app:round="@dimen/cornerradius_radius_6"/>

        <tech.jidouauto.component.widgets.basic.TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:singleLine="true"
            android:textSize="32px"
            android:textColor="@color/white"
            android:text="@{data.title}"
            app:layout_constraintTop_toBottomOf="@id/iv_cover"
            tools:text="大河之水"/>

        <tech.jidouauto.component.widgets.basic.TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="28px"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="更新至20集"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>