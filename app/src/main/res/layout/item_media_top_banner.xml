<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="data"
            type="com.gta.model.room.entity.BannerBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="432px"
        android:layout_margin="24px">

        <tech.jidouauto.component.widgets.basic.ImageFilterView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:round="@dimen/cornerradius_radius_6"/>

        <tech.jidouauto.component.widgets.basic.TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24px"
            android:singleLine="true"
            android:textSize="36px"
            android:textColor="@color/white"
            android:text="@{data.title}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_update"
            app:layout_constraintBottom_toBottomOf="@id/tv_update"
            app:layout_constraintTop_toTopOf="@id/tv_update"
            tools:text="大河之水"/>

        <tech.jidouauto.component.widgets.basic.TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="32px"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="24px"
            android:layout_marginBottom="20px"
            tools:text="更新至20集"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>