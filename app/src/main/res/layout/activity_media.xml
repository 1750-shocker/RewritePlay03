<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="serviceInfo"
            type="com.gta.model.model.ServiceBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.gta.core.view.custom.mc.MediaSourceBar
            android:id="@+id/media_source_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:media_source_icon="@{serviceInfo.icon}"
            app:media_source_name="@{serviceInfo.name}" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/main_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#03A9F4"
            app:tabGravity="fill"
            app:tabIndicatorColor="#EBEBEB"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="5dp"
            app:tabMaxWidth="0dp"
            app:tabMode="scrollable"
            app:tabSelectedTextAppearance="@style/TabLayoutTextStyle"
            app:tabSelectedTextColor="#FF5722"
            app:tabTextColor="#EBEBEB"
            app:layout_constraintStart_toEndOf="@id/media_source_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/main_tab"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>