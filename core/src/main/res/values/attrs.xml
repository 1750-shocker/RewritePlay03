<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TitleBar">
        <attr name="titleName" format="string" />
        <attr name="backImageVisible" format="boolean" />
    </declare-styleable>

    <!-- 进度条悬浮按钮 -->
    <declare-styleable name="FloatingMenu">

        <attr name="fmm_button_interval" format="dimension" />
        <attr name="fmm_cover" format="reference" />
        <attr name="fmm_backgroundTint" format="color" />
        <attr name="fmm_floating_direction" format="enum">
            <enum name="up" value="0" />
            <enum name="left" value="1" />
            <enum name="down" value="2" />
            <enum name="right" value="3" />
        </attr>
    </declare-styleable>
    <attr name="mediaSourceBarStyle" format="reference" />
    <declare-styleable name="MediaSourceBar">
        <attr name="media_source_backgroundColor" format="reference|color" />
        <attr name="media_source_icon" format="reference" />
        <attr name="media_source_name" format="reference|string" />
        <attr name="media_source_name_color" format="reference|color" />
        <attr name="media_source_name_size" format="reference|dimension" />
    </declare-styleable>

</resources>